@model IEnumerable<Employment_info>
@{
    ViewData["Title"] = "List of Personal";
}
<div class="float-right" style="padding-right: 25px;">
    @await Html.PartialAsync("_Search", "Personal")
</div>
<br />
<br />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1 dir="rtl" lang="ar" class="float-right">المعلومات الوظيفية</h1>
        </p>

        <table class="table" dir="rtl">
            <thead>
                <tr class="text-center">
                    @*<td class="align-middle">
                            <img class="rounded-circle" src="@item.Image" alt="@item.FullName" style="max-width: 100px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>*@
                    <th>@Html.DisplayNameFor(model => model.Personal)</th>
                    <th>@Html.DisplayNameFor(model => model.MainDeptartment)</th>
                    <th>@Html.DisplayNameFor(model => model.Actual_direct_date)</th>
                    @* <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>*@
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MainDeptartment)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Actual_direct_date)
                        </td>
                        @*<td class="align-middle">
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>*@
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-info" target="_blank" href="@item.PDF"><i class="bi bi-file-earmark-pdf-fill"></i></a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


