@model IEnumerable<Personal>
@{
    ViewData["Title"] = "List of Personal";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Image)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Image" alt="@item.FullName" style="max-width: 100px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="EditPersonal" asp-route-id="@item.PersonalId"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PersonalId"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-info" target="_blank" href="@item.PDF"><i class="bi bi-file-earmark-pdf-fill"></i></a> |                       
                            <a class="btn btn-danger text-white" asp-action="DeletePersonal" asp-route-id="@item.PersonalId"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="position: fixed; right: 25px; bottom: 75px;" class="text-white">
            <a asp-controller="Personal" asp-action="CreatePersonal" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> اضافة جديد
            </a>
        </div>
    </div>
</div>
