@model IEnumerable<Personal>
@{
    ViewData["Title"] = "List of Personal";
}
<div class="float-right" style="padding-right: 25px;">
    @await Html.PartialAsync("_Search", "Personal")
</div>
<br />
<br />
<div class="row float-right" dir="rtl" lang="ar">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 400px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text text-white float-right">
                                <h5 class="card-title">
                                    @item.FullName
                                    <img class="rounded-circle float-sm-none" src="@item.Image" alt="@item.FullName" style="max-width: 100px" />
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                </h5> 
                            </p>
                        </div>
                    </div>
                    @*<div class="col-md-6">
                        <img class="rounded-circle" src="@item.Image" alt="@item.FullName" style="max-width: 100px" />
                    </div>*@
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>مدخل البيانات: </b>@item.DataEntryName</p>
                            <p class="card-text"><b>اسم المستشار: </b>@item.FullName</p>
                            <p class="card-text"><b>رقم الموبايل: </b>@item.PhoneNo</p>
                            <p class="card-text"><b>Employment_infoId: </b>@item.Employment_info.Id</p>             
                            <p class="card-text"><b>Start Date: </b>@item.EntryDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@item.LastUpdateDate.ToString("dd MMM yy")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white @((DateTime.Now > item.LastUpdateDate) ? "disabled" : "")">
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("_CreateNew", "Personal")


